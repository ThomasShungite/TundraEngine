{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build64_debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/../build64_debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            // Use the standard gcc compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$gcc"
        }
    ]
}